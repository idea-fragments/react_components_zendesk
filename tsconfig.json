{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src/",
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "outDir": "type_defs",
    "preserveConstEnums": true,
    "target": "ES6"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "extends": "@tsconfig/create-react-app/tsconfig.json",
  "include": [
    "src/**/*"
  ]
}
